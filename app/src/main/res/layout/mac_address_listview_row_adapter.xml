<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <TableRow
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/computer_name_textview_listview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"/>

        <TextView android:id="@+id/mac_address_textview_listview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"/>

        <Button android:id="@+id/send_wake_on_lan_button_listview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"/>
        <Button android:id="@+id/delete_button_listview_row"
            android:text="@string/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"/>
    </TableRow>
</TableLayout>